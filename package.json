  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" ",
    "start": "nest start",
    "start:dev": "dotenv NODE_ENV=development nest start --watch",
    "start:debug": "dotenv NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv NODE_ENV=test jest",
    "test:watch": "dotenv NODE_ENV=test jest --watch",
    "test:cov": "dotenv NODE_ENV=test jest --coverage",
    "test:debug": "dotenv NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv NODE_ENV=test jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.11",
    "@nestjs/platform-express": "9.0.11",
    "joi": "17.6.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@fullstacksjs/eslint-config": "8.6.0",
    "@fullstacksjs/toolbox": "2.19.0",
    "@fullstacksjs/tsconfig": "0.6.0",
    "@nestjs/cli": "9.1.1",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.11",
    "@types/express": "4.17.13",
    "@types/jest": "29.0.0",
    "@types/node": "18.7.14",
    "@types/supertest": "2.0.12",
    "cspell": "6.8.1",
    "dotenv-cli": "6.0.0",
    "eslint": "8.23.0",
    "husky": "8.0.0",
    "jest": "28.0.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.2"
  }
}
