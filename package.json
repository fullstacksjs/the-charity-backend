{
  "name": "the-charity-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" ",
    "start": "nest start",
    "start:dev": "dotenv -v NODE_ENV=development -e .development.env nest start --watch",
    "start:debug": "dotenv -v NODE_ENV=development -e .development.env nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint  \"{src,apps,libs,test}/**/*.ts\"",
    "test": "dotenv -v NODE_ENV=test -e .test.env jest",
    "test:ci": "dotenv -v NODE_ENV=test jest --ci",
    "test:watch": "dotenv -v NODE_ENV=test -e .test.env jest --watch",
    "test:cov": "dotenv -v NODE_ENV=test -e .test.env jest --coverage",
    "test:debug": "dotenv -v NODE_ENV=test node -e .test.env --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -v NODE_ENV=test -e .test.env jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "migration:add": "dotenv -e .development.env prisma migrate dev",
    "migration:deploy": "dotenv -e .development.env prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "seed": "dotenv -e .development.env prisma db seed",
    "spell": "cspell ./src/**/*"
  },
  "dependencies": {
    "@nestjs/common": "9.0.11",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.11",
    "@nestjs/platform-express": "9.0.11",
    "@prisma/client": "4.3.1",
    "argon2": "0.29.1",
    "joi": "17.6.0",
    "nanoid": "3.3.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@fullstacksjs/eslint-config": "8.6.0",
    "@fullstacksjs/toolbox": "2.19.0",
    "@fullstacksjs/tsconfig": "0.6.0",
    "@nestjs/cli": "9.1.1",
    "@nestjs/schematics": "9.0.1",
    "@nestjs/testing": "9.0.11",
    "@types/express": "4.17.13",
    "@types/jest": "29.0.0",
    "@types/node": "18.7.14",
    "@types/supertest": "2.0.12",
    "cspell": "6.8.1",
    "dotenv-cli": "6.0.0",
    "eslint": "8.23.0",
    "husky": "8.0.0",
    "jest": "28.0.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prisma": "4.3.1",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.2"
  },
  "volta": {
    "node": "16.17.0",
    "npm": "8.18.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
