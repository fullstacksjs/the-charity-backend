datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// reason to use singular name for table names: https://stackoverflow.com/questions/338156/table-naming-dilemma-singular-vs-plural-names

model Admin {
  id String @id @default(cuid()) @db.VarChar(32)

  username String @unique @db.VarChar(60)
  password String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("admin")
}

model Family {
  id String @id @default(cuid()) @db.VarChar(32)

  name   String       @db.VarChar(100) // the reason to choose 100 as name length limit: https://stackoverflow.com/questions/20958/list-of-standard-lengths-for-database-fields (adding first_name + last_name)
  slug   String       @unique @db.VarChar(255)
  status FamilyStatus @default(DRAFT)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("family")
}

enum FamilyStatus {
  DRAFT
  COMPLETE
}
